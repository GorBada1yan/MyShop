<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductAddActivity"
    >
   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/category_appbar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/primary"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       <TextView
           android:id="@+id/back_add"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Отмена"
           android:padding="10dp"
           android:layout_marginLeft="10dp"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:layout_alignParentRight="false"
           />

           <TextView
               android:id="@+id/add_add"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Добавить товар"
               android:padding="10dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               />

       </RelativeLayout>
   </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_appbar"
        android:scrollbars="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_image_add"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/select_product_image"
           />

        <EditText
            android:id="@+id/product_name_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_add"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Введите название продукта"
            android:padding="10dp"
            android:textColorHint="@color/hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/product_description_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_add"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Введите описание продукта"
            android:padding="10dp"
            android:textColorHint="@color/hint"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/product_price_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description_add"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Цена продукта"
            android:padding="10dp"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint" />

        <EditText
            android:id="@+id/product_contact_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_add"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Введите свои кантакты для связи"
            android:padding="10dp"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint" />

        <EditText
            android:id="@+id/product_location_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_contact_add"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Введите свои кантакты для связи"
            android:padding="10dp"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint" />


        <Spinner
            android:id="@+id/category_spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_location_add"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/category_spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_spinner1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/category_spinner_comerch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_spinner2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:visibility="invisible"/>

        <Spinner
            android:id="@+id/category_spinner_lich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_spinner2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:visibility="invisible"/>

 // Комерческий транспорт


            <Spinner
                android:id="@+id/category_spinner_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_comerch"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>
            <Spinner
                android:id="@+id/category_spinner_gruz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_comerch"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>
            <Spinner
                android:id="@+id/category_spinner_selxoz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_comerch"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>
            <Spinner
                android:id="@+id/category_spinner_stroi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_comerch"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>













//Личный трансрорт
            <Spinner
                android:id="@+id/category_spinner_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_lich"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>

            <Spinner
                android:id="@+id/category_spinner_moped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_lich"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>
            <Spinner
                android:id="@+id/category_spinner_velosiped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_lich"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>
            <Spinner
                android:id="@+id/category_spinner_moto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_spinner_lich"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="invisible"/>

        </RelativeLayout>



    </ScrollView>



</RelativeLayout>