<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/welcome"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        ></ImageView>


    <EditText
        android:id="@+id/register_username_input"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applogo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:hint="Имя пользователя "
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/hint"
        android:textColorHint="@color/hint"
        android:backgroundTint="@color/imputback"


        android:textSize="20sp"></EditText>

    <EditText
        android:id="@+id/register_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_username_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="Намер телефона "
        android:inputType="phone"
        android:textColorHint="@color/hint"
        android:textColor="@color/hint"
        android:backgroundTint="@color/imputback"
        android:textSize="20sp"
        style="@style/TextAppearance.Material3.BodyLarge"
        ></EditText>

    <EditText
        android:id="@+id/register_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_phone_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="Электронный адрес "
        android:inputType="textEmailAddress"
        android:textColorHint="@color/hint"
        android:textColor="@color/hint"
        android:backgroundTint="@color/imputback"
        android:textSize="20sp"
        style="@style/TextAppearance.Material3.BodyLarge"
        ></EditText>


    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/hint"
        android:textColor="@color/hint"
        android:backgroundTint="@color/imputback"
        android:textSize="20sp"
        style="@style/TextAppearance.Material3.BodyLarge"

        ></EditText>
    <EditText
        android:id="@+id/register_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:hint="Повторите пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/hint"
        android:textColor="@color/hint"
        android:backgroundTint="@color/imputback"
        android:textSize="20sp"
        style="@style/TextAppearance.Material3.BodyLarge"

        ></EditText>




    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password_check"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="73dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/primary"
        android:padding="15dp"
        android:text="Регистрация"
        android:textColor="@color/white"

        android:textSize="25sp"></Button>


</RelativeLayout>