<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCategoryActivity">


    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите категорию"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:padding="20dp"
        android:id="@+id/slogan"
        />
    
    
    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/slogan"
        android:layout_marginTop="20dp"
        android:gravity="center">
        
        
        <ImageView
            android:id="@+id/car"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/car"
            android:layout_margin="10dp"



            />
        <ImageView
            android:id="@+id/boat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/boat"
            android:layout_margin="10dp"


            />
        <ImageView
        android:id="@+id/moto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/moto"
        android:layout_margin="10dp"


        /><ImageView
        android:id="@+id/service"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/service"
        android:layout_margin="10dp"
        />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/first_line"
        android:layout_marginTop="10dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/dress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dress"
            android:layout_margin="10dp"



            />
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shoes"
            android:layout_margin="10dp"


            />
        <ImageView
            android:id="@+id/sweather"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sweather"
            android:layout_margin="10dp"


            />
        <ImageView
        android:id="@+id/accessories"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/accessories"
        android:layout_margin="10dp"
        />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/third_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/second_line"
        android:layout_marginTop="10dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/phone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/phone"
            android:layout_margin="10dp"



            />
        <ImageView
            android:id="@+id/pc"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/computer"
            android:layout_margin="10dp"


            />
        <ImageView
            android:id="@+id/headphones"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphones"
            android:layout_margin="10dp"


            />
        <ImageView
            android:id="@+id/fridge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fridge"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/third_line"
        android:layout_marginTop="10dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/books"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/books"
            android:layout_margin="10dp"



            />
        <ImageView
            android:id="@+id/collections"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/collection"
            android:layout_margin="10dp"


            />
        <ImageView
            android:id="@+id/sport"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sport"
            android:layout_margin="10dp"


            />
        <ImageView
            android:id="@+id/guitar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/guitar"
            android:layout_margin="10dp"
            />

    </LinearLayout>



</RelativeLayout>