<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoProdActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Info_Bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/primary"
        android:theme="@style/Theme.MyShop.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Назад"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/info_add_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Добавить в избранные"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        </RelativeLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Info_Bar"/>


    <ImageView
        android:id="@+id/info_photo"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/info_price"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        />
    <TextView
        android:id="@+id/info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_photo"
        android:background="@drawable/add_design"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Описание товара"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/Info_Bar"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="20dp"
        android:text="Название продукта"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/info_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_design"
        android:text="Price         "
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/info_name"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/info_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_description"
        android:layout_marginTop="15dp"
        android:background="@drawable/add_design"
        android:padding="10dp"
        android:text="Contacts"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        />

</RelativeLayout>